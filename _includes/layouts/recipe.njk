{% extends "layouts/base.njk" %}

{% block content %}
  <article class="recipe">
    <h1>{{ title }}</h1>
    <div class="with-sidebar">
      <div class="recipe--content">
        <aside class="ingredients">
          <h2>{{ for }}</h2>
          <ul>
            {%- for ingredient in ingredients %}
              <li>{{ ingredient }}</li>
            {%- endfor -%}
          </ul>
        </aside>
        <div>
          <div class="flow recipe--main">
            {{ content | safe }}
          </div>
        </div>
      </div>
    </div>
  </article>
{% endblock %}
